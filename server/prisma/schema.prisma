generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         Role     @default(EMPLOYEE)
  fullName     String
  nickname     String
  dateOfBirth  DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  repairs      Repair[]
}

model Repair {
  id            Int           @id @default(autoincrement())
  description   String?
  totalPrice    Decimal
  startedAt     DateTime      @default(now())
  completedAt   DateTime?
  status        RepairStatus  @default(IN_PROGRESS)
  paymentMethod PaymentMethod @default(CASH)
  paidAt        DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  userId        Int
  vehicleId     Int
  customerId    Int?
  customer      Customer?     @relation(fields: [customerId], references: [id], onDelete: Cascade)
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicle       Vehicle       @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  repairItems   RepairItem[]

  @@index([customerId], map: "Repair_customerId_fkey")
  @@index([userId], map: "Repair_userId_fkey")
  @@index([vehicleId], map: "Repair_vehicleId_fkey")
}

model Vehicle {
  id             Int           @id @default(autoincrement())
  brand          String
  model          String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  licensePlateId Int?
  repairs        Repair[]
  licensePlate   LicensePlate? @relation(fields: [licensePlateId], references: [id], onDelete: Cascade)

  @@index([licensePlateId], map: "Vehicle_licensePlateId_fkey")
}

model LicensePlate {
  id          Int       @id @default(autoincrement())
  plateNumber String
  province    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  vehicles    Vehicle[]

  @@unique([plateNumber, province], name: "plateNumber_province")
}

model Customer {
  id          Int      @id @default(autoincrement())
  fullName    String?
  address     String?
  phoneNumber String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  repairs     Repair[]
}

model RepairItem {
  id        Int      @id @default(autoincrement())
  unitPrice Decimal
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  repairId  Int
  partId    Int?
  serviceId Int?
  part      Part?    @relation(fields: [partId], references: [id], onDelete: Cascade)
  repair    Repair   @relation(fields: [repairId], references: [id], onDelete: Cascade)
  service   Service? @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@index([partId], map: "RepairItem_partId_fkey")
  @@index([repairId], map: "RepairItem_repairId_fkey")
  @@index([serviceId], map: "RepairItem_serviceId_fkey")
}

model Part {
  id                 Int          @id @default(autoincrement())
  name               String?
  stockQuantity      Int          @default(0)
  minStockLevel      Int          @default(0)
  costPrice          Decimal?
  sellingPrice       Decimal
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  categoryId         Int
  partNumber         String       @unique
  publicId           String?
  secureUrl          String?
  unit               String
  compatibleVehicles Json?
  brand              String?
  typeSpecificData   Json?
  category           Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  repairItems        RepairItem[]

  @@index([categoryId], map: "Part_categoryId_fkey")
}

model Service {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  price       Decimal
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  categoryId  Int
  repairItems RepairItem[]
  category    Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId], map: "Service_categoryId_fkey")
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  parts    Part[]
  services Service[]
}

enum Role {
  EMPLOYEE
  ADMIN
}

enum RepairStatus {
  IN_PROGRESS
  COMPLETED
  PAID
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  BANK_TRANSFER
}
